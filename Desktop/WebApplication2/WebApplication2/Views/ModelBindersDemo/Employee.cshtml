@model WebApplication2.Models.Employee

@{
    ViewBag.Title = "Employee";
}

<h2>Employee</h2>

@using (Html.BeginForm("Employee", "ModelBindersDemo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Employee</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
           OffAddress
            <div class="form-group">
                @Html.LabelFor(model=>model.OffAddress.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model=>model.OffAddress.Street, new { htmlAttributes = new { @class = "form-control" } })
                </div>
             </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OffAddress.City, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OffAddress.City, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            Res-Address
            <div class="form-group">
                @Html.LabelFor(model => model.ResAddress.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ResAddress.Street,new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ResAddress.City, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ResAddress.City,  new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model=>model.Photo)
                <div class="col-md-10">
                    <input type="file" name="photo" />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }

